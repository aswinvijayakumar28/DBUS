<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1d1d"
    tools:context=".addpassenger_b2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:background="@drawable/addptxtbg"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="612dp"
        android:text="ADD PASSENGER"
        android:textColor="#0FD312"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/addpimg2"
        android:layout_width="214dp"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="413dp"
        android:src="@drawable/aadp" />

    <EditText
        android:id="@+id/addpid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="375dp"
        android:layout_marginBottom="266dp"
        android:drawableLeft="@drawable/pid"
        android:hint="  Passenger ID"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="@color/lightgray" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="491dp"
        android:layout_marginBottom="167dp">


    </Spinner>

    <Button
        android:id="@+id/add_psg_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="611dp"
        android:layout_marginBottom="53dp"
        android:text="ADD" />

</RelativeLayout>