<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/login_bg"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#202020"
        android:backgroundTint="#23050505">

        <ImageView
            android:id="@+id/drvimg"
            android:layout_width="131dp"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:src="@drawable/dicon" />

        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="53dp"
            android:hint="Driver ID:"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#D6D1D1" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/username"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="358dp"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#CFCBCB"
            android:textColorHint="#CEC9C9" />

        <Button
            android:id="@+id/login"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="423dp"
            android:background="@drawable/btn_style"

            android:text="Login"

            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/fpswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="42dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/forgot_pswd"
            android:paddingLeft="5dp"
            android:text=" Forgot Password"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</RelativeLayout>