<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1b1b"
    tools:context=".sos_b2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="643dp"
        android:gravity="center"
        android:text="SOS MESSAGE"
        android:layout_centerHorizontal="true"
        android:textColor="#EE0B13"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="361dp"
        android:src="@drawable/sosimg" />

    <Button
        android:id="@+id/sos_btn_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/sosbtnbg"
        android:padding="10dp"
        android:text="SOS"
        android:textColor="#E60B0B"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="587dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="78dp"
        android:text="   Press SOS Button in case of Emergency"
        android:textColor="@color/lightgray" />
</RelativeLayout>